<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scene2_background">

    <ImageView
        android:id="@+id/button.back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        android:tint="@drawable/selector_button_back"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/button.1"
            style="@style/scene.2.button"
            android:text="1"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.25"/>

        <TextView
            android:id="@+id/button.2"
            style="@style/scene.2.button"
            android:text="2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.25"/>

        <TextView
            android:id="@+id/button.3"
            style="@style/scene.2.button"
            android:text="3"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintVertical_bias="0.25"/>

        <TextView
            android:id="@+id/button.4"
            style="@style/scene.2.button"
            android:text="4"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.55"/>

        <TextView
            android:id="@+id/button.5"
            style="@style/scene.2.button"
            android:text="5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.55"/>

        <TextView
            android:id="@+id/button.6"
            style="@style/scene.2.button"
            android:text="6"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintVertical_bias="0.55"/>

        <TextView
            android:id="@+id/button.7"
            style="@style/scene.2.button"
            android:text="7"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.85"/>

        <TextView
            android:id="@+id/button.8"
            style="@style/scene.2.button"
            android:text="8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.85"/>

        <TextView
            android:id="@+id/button.9"
            style="@style/scene.2.button"
            android:text="9"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintVertical_bias="0.85"/>

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>